########################
# LLM Provider API Keys
########################
# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Configuration
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro

# xAI (Grok) Configuration
XAI_API_KEY=
