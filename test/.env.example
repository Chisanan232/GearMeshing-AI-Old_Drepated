# Copy this file to `.env` or `.env.local` and fill in real values
# For detailed configuration guide, see test/SETTINGS_GUIDE.md

########################
# AI Provider Configuration
########################
# Environment variables use double underscore (__) as delimiters for nested properties
# Examples:
# - AI_PROVIDER__OPENAI__API_KEY → test_settings.ai_provider.openai.api_key
# - DATABASE__POSTGRES__DB → test_settings.database.postgres.db

# OpenAI Configuration
AI_PROVIDER__OPENAI__API_KEY=
AI_PROVIDER__OPENAI__MODEL=gpt-4o
AI_PROVIDER__OPENAI__BASE_URL=

# Anthropic Configuration
AI_PROVIDER__ANTHROPIC__API_KEY=
AI_PROVIDER__ANTHROPIC__MODEL=claude-3-opus-20240229

# Google Configuration
AI_PROVIDER__GOOGLE__API_KEY=
AI_PROVIDER__GOOGLE__MODEL=gemini-pro

# xAI (Grok) Configuration
AI_PROVIDER__XAI__API_KEY=
AI_PROVIDER__XAI__MODEL=grok-2

########################
# Test Execution Configuration
########################
# Enable evaluation tests (true/false)
TEST__RUN_EVAL_TESTS=false

########################
# Database Configuration for Tests
########################
# Test database URL (defaults to in-memory SQLite for unit tests)
# For smoke tests, this is automatically overridden by PostgreSQL via Docker Compose
DATABASE__URL=sqlite+aiosqlite:///:memory:

# Enable PostgreSQL-based tests (requires PostgreSQL running)
# For smoke tests, this is automatically set to true via Docker Compose
DATABASE__ENABLE_POSTGRES_TESTS=false

# PostgreSQL Configuration (for PostgreSQL tests)
# These are used for smoke tests with Docker Compose
DATABASE__POSTGRES__DB=ai_dev
DATABASE__POSTGRES__USER=ai_dev
DATABASE__POSTGRES__PASSWORD=changeme
DATABASE__POSTGRES__HOST=localhost
DATABASE__POSTGRES__PORT=5432

########################
# MCP Configuration for Tests
########################
# Slack MCP Configuration
MCP__SLACK__HOST=0.0.0.0
MCP__SLACK__PORT=8081
MCP__SLACK__MCP_TRANSPORT=sse
MCP__SLACK__BOT_ID=
MCP__SLACK__APP_ID=
MCP__SLACK__BOT_TOKEN=
MCP__SLACK__USER_TOKEN=
MCP__SLACK__SIGNING_SECRET=

# ClickUp MCP Configuration
MCP__CLICKUP__HOST=0.0.0.0
MCP__CLICKUP__PORT=8082
MCP__CLICKUP__MCP_TRANSPORT=sse
MCP__CLICKUP__API_TOKEN=

# GitHub MCP Configuration
MCP__GITHUB__TOKEN=
MCP__GITHUB__DEFAULT_REPO=

# MCP Gateway Configuration
MCP__GATEWAY__URL=http://mcp-gateway:4444
MCP__GATEWAY__TOKEN=
MCP__GATEWAY__DB_URL=postgresql+psycopg://ai_dev:changeme@postgres:5432/ai_dev
MCP__GATEWAY__REDIS_URL=redis://redis:6379/0
MCP__GATEWAY__ADMIN_PASSWORD=adminpass
MCP__GATEWAY__ADMIN_EMAIL=admin@example.com
MCP__GATEWAY__ADMIN_FULL_NAME=Admin User
MCP__GATEWAY__JWT_SECRET=my-test-key

########################
# Monitoring Configuration
########################
# LangSmith Configuration (for LangGraph agent tracing)
LANGSMITH__TRACING=false
LANGSMITH__API_KEY=
LANGSMITH__PROJECT=gearmeshing-ai
LANGSMITH__ENDPOINT=https://api.smith.langchain.com
LANGSMITH__WORKSPACE_ID=

# Logfire Configuration
LOGFIRE__ENABLED=false
LOGFIRE__TOKEN=
LOGFIRE__PROJECT_NAME=gearmeshing-ai
LOGFIRE__ENVIRONMENT=development
LOGFIRE__SERVICE_NAME=gearmeshing-ai-server
LOGFIRE__SERVICE_VERSION=0.0.0
LOGFIRE__SAMPLE_RATE=1.0
LOGFIRE__TRACE_SAMPLE_RATE=1.0
LOGFIRE__TRACE_PYDANTIC_AI=true
LOGFIRE__TRACE_SQLALCHEMY=true
LOGFIRE__TRACE_HTTPX=true
LOGFIRE__TRACE_FASTAPI=true

########################
# Docker Compose Configuration
########################
# These are automatically set by smoke test conftest.py for Docker Compose services
# Manual configuration is typically not needed for smoke tests

# Docker Compose Project Name (auto-generated)
COMPOSE_PROJECT_NAME=gearmeshing-ai-smoke-test

