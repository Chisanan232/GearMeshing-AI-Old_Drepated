########################
# Test Execution Flags
########################
# Enable evaluation tests
GM_RUN_EVAL_TESTS=0

########################
# Database Configuration for Tests
########################
# Test database URL (defaults to in-memory SQLite)
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:

# Enable PostgreSQL-based tests (requires PostgreSQL running)
ENABLE_POSTGRES_TESTS=0

# PostgreSQL Configuration (for PostgreSQL tests)
POSTGRES_DB=ai_dev
POSTGRES_USER=ai_dev
POSTGRES_PASSWORD=changeme
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
